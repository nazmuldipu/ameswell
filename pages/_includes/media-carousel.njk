{% macro media_carousel(image, caption, background_color) %}
    <figure class="grid justify-items-center {{ background_color }}">
        <picture>
            <source srcset="{{ image }}.webp" type="image/webp">
            <img srcset="{{ image }}.jpg" src="{{ image }}.jpg">
        </picture>
        <nav class="relative -top-4 py-2 px-4 bg-ams-white shadow-md">
            <a href="#" class="inline-block w-3 h-3 transform rotate-45 justify-self-end border-b-2 border-l-2 border-ams-gold -indent-xl overflow-hidden">
                previous
            </a>
            <span class="px-4 whitespace-nowrap text-ams-gold font-bold">
                1 of 4
            </span>
            <a href="#" class="inline-block w-3 h-3 transform rotate-45 justify-self-start border-t-2 border-r-2 border-ams-gold -indent-xl overflow-hidden">
                next
            </a>
        </nav>
        {% if caption %}
            <figcaption class="max-w-xl pt-6 pb-4 px-4 text-center text-ams-primary">
                {{ caption }}
            </figcaption>
        {% endif %}
    </figure>
{% endmacro %}